{
  "name": "confluence-dc-mcp-server",
  "version": "1.1.0",
  "description": "Production-validated MCP server for Confluence Data Center - 11 AI-tested tools with enhanced version management and complete API compatibility",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "confluence-dc-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "INSTALL.md",
    "API_REFERENCE.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --outDir dist && chmod +x dist/index.js",
    "dev": "tsc --outDir dist --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist build",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run build",
    "test": "echo 'All tools built successfully'",
    "prepack": "npm run build",
    "postpack": "echo 'Package ready for npm publish'"
  },
  "keywords": [
    "confluence",
    "confluence-data-center",
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "ai",
    "claude",
    "cline",
    "cursor",
    "enterprise",
    "personal-access-token",
    "collaboration",
    "documentation",
    "atlassian"
  ],
  "author": "phuc-nt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phuc-nt/confluence-dc-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/phuc-nt/confluence-dc-mcp-server/issues"
  },
  "homepage": "https://github.com/phuc-nt/confluence-dc-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}